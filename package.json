{
  "name": "@bmad/checklist",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.1.42",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@checklist/cli",
    "dev:turbo": "turbo run dev --filter=@checklist/cli",
    "dev:all": "turbo run dev",
    "dev:legacy": "bun run --watch apps/cli/src/index.ts",
    "build": "turbo run build",
    "build:all": "bun run build:core && bun run build:cli && bun run build:tui",
    "build:turbo": "turbo run build",
    "build:core": "cd packages/core && bun run build",
    "build:cli": "cd apps/cli && bun run build",
    "build:tui": "cd packages/tui && bun run build",
    "clean": "rm -rf dist coverage",
    "pretest": "bun run clean",
    "test": "turbo run test",
    "test:turbo": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:sequential": "./run-sequential-tests.bash",
    "test:unit:legacy": "bun test packages/core/tests/*.test.ts packages/core/tests/container packages/core/tests/services packages/core/tests/state packages/core/tests/utils packages/core/tests/workflow packages/tui packages/cli packages/shared",
    "test:integration:legacy": "bun test packages/core/tests/integration",
    "test:monitoring": "bun test packages/core/tests/monitoring",
    "test:quick": "bun test packages/tui packages/cli packages/shared packages/core/tests/state packages/core/tests/workflow packages/core/tests/container packages/core/tests/services packages/core/tests/utils packages/core/tests/migrations",
    "test:watch": "bun test --watch",
    "test:watch:turbo": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:legacy": "bun run clean && bun test --coverage",
    "analyze:coverage": "bun run scripts/analyze-coverage.js",
    "coverage:report": "bun run scripts/analyze-coverage.ts --json --csv",
    "coverage:lines": "bun run scripts/analyze-coverage.ts --lines --top 10",
    "type-check": "tsc --noEmit --incremental",
    "typecheck": "turbo run typecheck",
    "typecheck:turbo": "turbo run typecheck",
    "typecheck:legacy": "tsc --noEmit --incremental",
    "lint": "turbo run lint",
    "lint:turbo": "turbo run lint",
    "lint:legacy": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "lint:report": "eslint . --format html --output-file reports/quality/eslint-report.html --cache --cache-location .eslintcache",
    "lint:analysis": "node scripts/lint-report.js",
    "lint:summary": "./scripts/lint-analysis.sh",
    "lint:quick": "./scripts/lint-summary.sh",
    "format": "turbo run format",
    "format:turbo": "turbo run format",
    "format:legacy": "prettier --write .",
    "format:check": "turbo run format:check",
    "format:check:legacy": "prettier --check .",
    "quality": "turbo run lint && turbo run format:check && turbo run typecheck",
    "quality:turbo": "turbo run lint && turbo run format:check && turbo run typecheck",
    "quality:legacy": "bun run lint:legacy && bun run format:check:legacy && bun run typecheck:legacy",
    "quality:fix": "bun run lint:fix && bun run format && bun run typecheck",
    "quality:fix:turbo": "turbo run lint:fix && turbo run format && turbo run typecheck",
    "bench": "bun test packages/core/tests/benchmarks/*.bench.ts",
    "bench:ci": "BENCHMARK_FORMAT=json BENCHMARK_FAIL_ON_VIOLATION=true bun run bench",
    "bench:assert": "bun run bench --assert",
    "bench:compare": "bun run packages/core/tests/benchmarks/runner.ts compare",
    "bench:trends": "bun run packages/core/tests/benchmarks/runner.ts trends",
    "bench:runner": "bun run packages/core/tests/benchmarks/runner.ts",
    "test:mutation": "turbo run test:mutation",
    "test:mutation:all": "turbo run test:mutation --filter=!@checklist/shared",
    "test:mutation:core": "turbo run test:mutation --filter=@checklist/core",
    "test:mutation:tui": "turbo run test:mutation --filter=@checklist/tui",
    "test:mutation:cli": "turbo run test:mutation --filter=@checklist/cli",
    "test:mutation:report": "turbo run test:mutation:report",
    "test:mutation:legacy": "bunx stryker run --incremental",
    "test:mutation:full": "bunx stryker run --incremental false",
    "test:mutation:clean": "rm -rf .stryker-tmp && bunx stryker run --incremental",
    "test:mutation:ci": "turbo run test:mutation:ci",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/typescript-checker": "^9.1.1",
    "@types/bun": "^1.2.22",
    "@types/debug": "^4.1.12",
    "@types/dotenv": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "eslint": "9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-html": "^2.7.3",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "tinybench": "^5.0.1",
    "turbo": "2.5.8",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "acorn": "8.15.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ansis": "^4.1.0",
    "c8": "10.1.3",
    "clipboardy": "^5.0.0",
    "ts-morph": "27.0.0"
  }
}
