{
  "name": "@checklist/core",
  "version": "0.0.1",
  "main": "../../dist/packages/core/index.js",
  "types": "../../dist/packages/core/index.d.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir=../../dist/packages/core --target=bun",
    "test": "bun test",
    "test:unit": "bun test",
    "test:integration": "bun test tests/integration/",
    "test:coverage": "bun test --coverage",
    "test:mutation": "bunx stryker run --incremental",
    "test:mutation:ci": "bunx stryker run --incremental --reporters=html,json --report-dir=../../reports/mutation/core",
    "test:mutation:report": "bunx stryker run --incremental --reporters=html,clear-text,json --report-dir=../../reports/mutation/core",
    "test:mutation:full": "bunx stryker run --incremental false",
    "test:mutation:clean": "rm -rf .stryker-tmp reports/mutation && bunx stryker run --incremental",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0",
    "tinybench": "^5.0.1"
  },
  "dependencies": {
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "pino-roll": "^4.0.0"
  }
}
