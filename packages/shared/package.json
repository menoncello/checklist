{
  "name": "@checklist/shared",
  "version": "0.0.1",
  "main": "../../dist/packages/shared/index.js",
  "types": "../../dist/packages/shared/index.d.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir=../../dist/packages/shared --target=bun",
    "test": "bun test",
    "test:unit": "bun test",
    "test:integration": "bun test tests/integration/",
    "test:coverage": "bun test --coverage",
    "test:mutation": "bunx stryker run --incremental",
    "test:mutation:ci": "bunx stryker run --incremental --reporters=html,json --report-dir=../../reports/mutation/shared",
    "test:mutation:report": "bunx stryker run --incremental --reporters=html,clear-text,json --report-dir=../../reports/mutation/shared",
    "test:mutation:full": "bunx stryker run --incremental false",
    "test:mutation:clean": "rm -rf .stryker-tmp reports/mutation && bunx stryker run --incremental",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit"
  }
}
