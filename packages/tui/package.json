{
  "name": "@checklist/tui",
  "version": "0.0.1",
  "main": "../../dist/packages/tui/index.js",
  "types": "../../dist/packages/tui/index.d.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir=../../dist/packages/tui --target=bun",
    "test": "bun test",
    "test:unit": "bun test",
    "test:integration": "bun test tests/integration/",
    "test:coverage": "bun test --coverage",
    "test:mutation": "bunx stryker run --incremental",
    "test:mutation:ci": "bunx stryker run --incremental --reporters=html,json --report-dir=../../reports/mutation/tui",
    "test:mutation:report": "bunx stryker run --incremental --reporters=html,clear-text,json --report-dir=../../reports/mutation/tui",
    "test:mutation:full": "bunx stryker run --incremental false",
    "test:mutation:clean": "rm -rf .stryker-tmp reports/mutation && bunx stryker run --incremental",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "quality": "bun run lint && bun run format:check && bun run type-check",
    "quality:fix": "bun run lint:fix && bun run format && bun run type-check",
    "dev": "bun --watch src/index.ts",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@checklist/core": "workspace:*",
    "@checklist/shared": "workspace:*",
    "ansis": "^3.3.2",
    "supports-color": "^10.2.2"
  },
  "devDependencies": {
    "pixelmatch": "^7.1.0"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  }
}
